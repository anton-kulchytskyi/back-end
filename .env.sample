# Application settings
PROJECT_NAME=Meduzzen Backend
HOST=0.0.0.0
PORT=8000
RELOAD=False
BACKEND_CORS_ORIGINS=http://localhost:3000,http://localhost:5173

# JWT settings
SECRET_KEY=generate-your-own-secret-key-use-python-secrets-module
ALGORITHM=HS256
ACCESS_TOKEN_EXPIRE_MINUTES=30
REFRESH_SECRET_KEY=generate-your-own-secret-key-use-python-secrets-module
REFRESH_TOKEN_EXPIRE_DAYS=7

# ─── Local development (docker-compose) ───────────────────────────────────────
POSTGRES_USER=postgres
POSTGRES_PASSWORD=postgres
POSTGRES_HOST=postgres
POSTGRES_PORT=5432
POSTGRES_DB=fastapi_db
DATABASE_ECHO=False

REDIS_HOST=redis
REDIS_PORT=6379
REDIS_DB=0

# ─── Production (Railway / Supabase / Upstash) ────────────────────────────────
# Set these instead of the individual variables above.
# Railway injects DATABASE_URL and REDIS_URL automatically when you link services.
#
# DATABASE_URL=postgresql://user:password@host:5432/dbname
# REDIS_URL=redis://default:password@host:6379

# Auth0 settings (optional)
AUTH0_DOMAIN=your-auth0-domain.us.auth0.com
AUTH0_CLIENT_ID=your-auth0-client-id
AUTH0_CLIENT_SECRET=your-auth0-client-secret
AUTH0_AUDIENCE=https://your-api-identifier
AUTH0_ALGORITHMS=RS256
